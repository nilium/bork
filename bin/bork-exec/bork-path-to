#!/bin/sh

bork_where="$(bork where)"
source "$bork_where/bork-absolute-path.sh"

# this routine is based on pini's answer at Stack Overflow:
# http://stackoverflow.com/a/5027832/457812

src="$(absolute_path "$1")"
dst="$(absolute_path "$2")"

common="$src"
back=

while [[ "${dst#$common}" = "$dst" ]] ; do
  common="$(dirname "$common")"
  back="../$back"
done

echo "$back${dst#$common/}"
